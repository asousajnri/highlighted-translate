{
  "manifest_version": 2,
  "name": "Highlighted Translate",
  "version": "0.0.1",
  "description": "Extension for translate text selected",

  "options_page": "options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "web_accessible_resources": ["images/*.**", "images/flags/*.png"],

  "permissions": ["activeTab", "storage", "identity", "tabs", "http://*/", "https://*/"],

  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    },
    "default_popup": "popup.html",
    "default_title": "Highlight Translate"
  },

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["css/content.css"],
      "run_at": "document_end"
    }
  ]
}
